general {
        colors = true
        interval = 5
}

load {
        format = "%5min"
}

disk "/" {
        format = "%free"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

volume master {
        format = "♪: %volume"
        format_muted = "♪: muted (%volume)"
        device = "pulse:0"
}

order += "disk /"
order += "load"
order += "volume master"
order += "tztime local"
